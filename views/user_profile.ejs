<link rel="stylesheet" href="/css/user_profile.css">
<h1>User Profile Page</h1>

<% if(user.avatar){%>
    <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100" >
<%}%>

<h1><%=this_user.name%></h1>
<h2><%=this_user.email%></h2>

<%if(user.id==this_user.id){%>
    <form action="/users/update/<%=this_user.id%>" enctype="multipart/form-data" method="post">
        <input type="text" name="name" placeholder="Type name.." value="<%=this_user.name%>" required>
        <input type="email" name="email" placeholder="Type email.." value="<%=this_user.email%>" required>
        <input type="file" name="avatar" placeholder="Profile picture">
        <input type="submit" value="Update">
    </form>
<%}%>
